<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/view_add_photo"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_bar_height"
            android:background="@color/red_dark"
            android:gravity="center|start"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/nav_back_Photo_btn"
                style="@style/Button.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@color/transparent"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_keyboard_backspace_24px" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Advance System"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_title_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Hình hoạt động"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
            <ImageView
                android:layout_weight="2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_7up" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ln_image_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:text="Hình Tổng Thể Thấy Vị Trí POSM Đã Lắp Đặt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/img_1"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rounded_button"
                    android:src="@drawable/ip_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_image_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:text="Hình Poster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/img_2"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_button"
                    android:src="@drawable/ip_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_save_photo"
        android:text="Lưu Thông Tin"
        android:background="@color/red_dark"
        android:layout_alignParentBottom="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>