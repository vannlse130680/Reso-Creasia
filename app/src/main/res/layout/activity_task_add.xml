<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_route_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_root_view_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/Toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:subtitleTextColor="@color/white"
                    app:title="@string/title"
                    android:background="@color/red_dark"
                    app:titleTextAppearance="@style/Toolbar.TitleText"
                    app:titleTextColor="@color/white" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Advance System"
                                android:textColor="#fff"
                                android:textSize="30dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/txt_title_route"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/title_add_new_customer"
                                android:textColor="#fff"
                                android:textSize="22dp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>
<!--                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_7up" />-->
                </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:id="@+id/view_content"
                    android:layout_above="@+id/btn_save_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:textColor="@color/blue"
                            android:textSize="22sp"
                            android:text="@string/txt_info_customer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_margin="7dp"
                            android:textSize="18sp"
                            android:text="@string/txt_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edt_name_store"
                            android:layout_margin="7dp"
                            android:paddingLeft="5dp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:background="@drawable/rounded_edittext"
                            android:nextFocusDown="@id/spn_store_type"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"/>
                        <TextView
                            android:layout_margin="7dp"
                            android:textSize="18sp"
                            android:text="@string/txt_store_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/spn_store_type"
                            android:layout_margin="7dp"
                            android:paddingLeft="5dp"
                            android:entries="@array/store_type_arrays"
                            android:background="@drawable/rounded_spinner"
                            android:nextFocusDown="@id/edt_address_number"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"/>
                        <TextView
                            android:layout_margin="7dp"
                            android:textSize="18sp"
                            android:text="@string/txt_address_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edt_house_number"
                            android:layout_margin="7dp"
                            android:paddingLeft="5dp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:background="@drawable/rounded_edittext"
                            android:nextFocusDown="@id/edt_street_name"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"/>
                        <TextView
                            android:layout_margin="7dp"
                            android:textSize="18sp"
                            android:text="@string/txt_street_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edt_street_name"
                            android:layout_margin="7dp"
                            android:paddingLeft="5dp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:background="@drawable/rounded_edittext"
                            android:nextFocusDown="@id/edt_town"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"/>
                        <TextView
                            android:layout_margin="7dp"
                            android:textSize="18sp"
                            android:text="@string/txt_town"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edt_ward"
                            android:layout_margin="7dp"
                            android:paddingLeft="5dp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:background="@drawable/rounded_edittext"
                            android:nextFocusDown="@id/edt_district"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"/>
                        <TextView
                            android:layout_margin="7dp"
                            android:textSize="18sp"
                            android:text="@string/txt_district"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edt_district"
                            android:layout_margin="7dp"
                            android:paddingLeft="5dp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:background="@drawable/rounded_edittext"
                            android:nextFocusDown="@id/edt_city"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"/>
                        <TextView
                            android:layout_margin="7dp"
                            android:textSize="18sp"
                            android:text="@string/txt_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edt_city"
                            android:layout_margin="7dp"
                            android:paddingLeft="5dp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:background="@drawable/rounded_edittext"
                            android:nextFocusDown="@id/btn_save"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"/>
                        <LinearLayout
                            android:id="@+id/ln_image_customer_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="5dp"
                                android:textColor="@color/blue"
                                android:textSize="18sp"
                                android:text="@string/txt_image_posm_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/img_customer_1"
                                android:layout_margin="5dp"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:background="@drawable/rounded_button"
                                android:src="@drawable/ip_camera"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ln_image_customer_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="5dp"
                                android:textColor="@color/blue"
                                android:textSize="18sp"
                                android:text="@string/txt_poster_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/img_customer_2"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:layout_margin="5dp"
                                android:background="@drawable/rounded_button"
                                android:src="@drawable/ip_camera"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                 </ScrollView>
                <Button
                    android:id="@+id/btn_save_customer"
                    android:text="@string/btn_save_info"
                    android:background="@color/red_dark"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
     </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>
