<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingBottom="30dp">
            <ImageView
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_store"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_customer_name"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="id#name"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:text="Ngày tạo:"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_customer_date"
                        android:textColor="@color/blue"
                        android:text="--/--/---"
                        android:textStyle="italic"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:text="Trạng thái:"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_customer_status"
                        android:textColor="@color/blue"
                        android:text="- - - - - "
                        android:textStyle="italic"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="4"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_pick_1"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        tools:src="@drawable/image_view" />
                    <ImageView
                        android:id="@+id/img_pick_2"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:padding="10dp"
                        tools:src="@drawable/image_view" />
                    <ImageView
                        android:id="@+id/img_pick_3"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:padding="10dp"
                        tools:src="@drawable/image_view" />
                    <ImageView
                        android:id="@+id/img_pick_7"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:padding="10dp"
                        tools:src="@drawable/image_view" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_pick_4"
                        android:padding="10dp"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        tools:src="@drawable/image_view" />
                    <ImageView
                        android:id="@+id/img_pick_5"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:padding="10dp"
                        tools:src="@drawable/image_view" />
                    <ImageView
                        android:id="@+id/img_pick_6"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:padding="10dp"
                        tools:src="@drawable/image_view" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
