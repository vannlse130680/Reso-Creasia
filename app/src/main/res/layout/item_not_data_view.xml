<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/empty_view_img_size"
        android:layout_height="@dimen/empty_view_img_size"
        android:src="@drawable/cloud_no_connection"
        android:tint="@color/accentBgColor"/>

    <TextView
        android:id="@+id/txtNoConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/empty_view_tv_padding"
        android:text="@string/not_data"
        android:textColor="@color/accentTextColor"
        android:textSize="@dimen/empty_view_tv_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="@dimen/item_empty_width_btn_retry"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/item_empty_margintop_btn_retry"
        android:text="@string/retry"
        android:textSize="@dimen/empty_view_tv_size"
        android:visibility="gone"
        android:textColor="@color/whiteTextColor"/>

</LinearLayout>