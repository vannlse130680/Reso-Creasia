<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:background="#ffff"
            android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                android:backgroundTint="#D3D3D3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/item_icon_locate"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_txtLocationName"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Location name ex"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_txtCode"
                    android:textSize="15dp"
                    android:text="Code example"
                    android:drawableLeft="@drawable/ic_code"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_txtOutletName"
                    android:textSize="15dp"
                    android:text="Cua hang"
                    android:drawableLeft="@drawable/ic_date_range"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_txtTime"
                    android:textSize="15dp"
                    android:text="Time example"
                    android:drawableLeft="@drawable/ic_access_time"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_txtLocate"
                    android:textSize="15dp"
                    android:text="Locate example"
                    android:drawableLeft="@drawable/ic_location_on"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_txtStatus"
                    android:textSize="15dp"
                    android:text="status example"
                    android:drawableLeft="@drawable/ic_phone"
                    android:layout_margin="5dp"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>