<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/view_info"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_bar_height"
            android:background="@color/red_dark"
            android:gravity="center|start"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/nav_back__info_btn"
                style="@style/Button.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@color/transparent"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_keyboard_backspace_24px" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Advance System"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_title_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Add new Customer"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
            <ImageView
                android:layout_weight="2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_7up" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textColor="@color/blue"
                    android:textSize="22sp"
                    android:text="Thông tin cá nhân khách hàng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_margin="7dp"
                    android:textSize="18sp"
                    android:text="Tên cửa hàng: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edt_name_shop"
                    android:layout_margin="7dp"
                    android:paddingLeft="5dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@drawable/rounded_edittext"
                    android:nextFocusDown="@id/spn_store_type"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
                <TextView
                    android:layout_margin="7dp"
                    android:textSize="18sp"
                    android:text="Loại Cửa hàng: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/spn_store_type"
                    android:layout_margin="7dp"
                    android:paddingLeft="5dp"
                    android:entries="@array/store_type_arrays"
                    android:background="@drawable/rounded_spinner"
                    android:nextFocusDown="@id/edt_address_number"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
                <TextView
                    android:layout_margin="7dp"
                    android:textSize="18sp"
                    android:text="Số nhà: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edt_address_number"
                    android:layout_margin="7dp"
                    android:paddingLeft="5dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@drawable/rounded_edittext"
                    android:nextFocusDown="@id/edt_street_name"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
                <TextView
                    android:layout_margin="7dp"
                    android:textSize="18sp"
                    android:text="Tên đường: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edt_street_name"
                    android:layout_margin="7dp"
                    android:paddingLeft="5dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@drawable/rounded_edittext"
                    android:nextFocusDown="@id/edt_town"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
                <TextView
                    android:layout_margin="7dp"
                    android:textSize="18sp"
                    android:text="Xã/Phường/Thị Trấn: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edt_town"
                    android:layout_margin="7dp"
                    android:paddingLeft="5dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@drawable/rounded_edittext"
                    android:nextFocusDown="@id/edt_district"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
                <TextView
                    android:layout_margin="7dp"
                    android:textSize="18sp"
                    android:text="Quận/Huyện: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edt_district"
                    android:layout_margin="7dp"
                    android:paddingLeft="5dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@drawable/rounded_edittext"
                    android:nextFocusDown="@id/edt_city"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
                <TextView
                    android:layout_margin="7dp"
                    android:textSize="18sp"
                    android:text="Tỉnh/Thành Phố: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edt_city"
                    android:layout_margin="7dp"
                    android:paddingLeft="5dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@drawable/rounded_edittext"
                    android:nextFocusDown="@id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_save"
        android:text="Lưu Thông Tin"
        android:background="@color/red_dark"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>